<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/auction_cell_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/disabled" />

    <TextView
        android:id="@+id/auction_cell_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:maxLines="4"
        android:text="Auction Title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/auction_cell_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auction_cell_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="4"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/auction_cell_image"
        app:layout_constraintTop_toBottomOf="@+id/auction_cell_title" />

    <TextView
        android:id="@+id/auction_cell_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Views: 200"
        app:layout_constraintEnd_toEndOf="@+id/auction_cell_image"
        app:layout_constraintStart_toStartOf="@+id/auction_cell_image"
        app:layout_constraintTop_toBottomOf="@+id/auction_cell_image" />

    <TextView
        android:id="@+id/auction_cell_bid_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bids: 4"
        app:layout_constraintEnd_toEndOf="@+id/auction_cell_view_count"
        app:layout_constraintStart_toStartOf="@+id/auction_cell_view_count"
        app:layout_constraintTop_toBottomOf="@+id/auction_cell_view_count" />

    <TextView
        android:id="@+id/auction_cell_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Time: 7d Left"
        app:layout_constraintBottom_toBottomOf="@+id/auction_cell_view_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/auction_cell_view_count" />

    <TextView
        android:id="@+id/auction_cell_current_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="Current Bid: $200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auction_cell_time_left" />

    <TextView
        android:id="@+id/auction_cell_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="Status: Upcoming"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auction_cell_current_bid" />
</android.support.constraint.ConstraintLayout>