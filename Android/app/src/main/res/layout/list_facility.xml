<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/facility_cell"
    >


    <com.google.android.gms.maps.MapView
        android:id="@+id/facility_cell_map"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/disabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/facility_cell_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:maxLines="4"
        android:text="Facility Name"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facility_cell_map"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/facility_cell_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="4"
        android:text="Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facility_cell_map"
        app:layout_constraintTop_toBottomOf="@+id/facility_cell_name" />

    <TextView
        android:id="@+id/facility_cell_active_auctions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Active Auctions: 1"
        app:layout_constraintEnd_toEndOf="@+id/facility_cell_map"
        app:layout_constraintStart_toStartOf="@+id/facility_cell_map"
        app:layout_constraintTop_toBottomOf="@+id/facility_cell_map" />

    <TextView
        android:id="@+id/facility_cell_total_auctions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Total Auctions: 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/facility_cell_active_auctions"
        app:layout_constraintStart_toStartOf="@+id/facility_cell_active_auctions"
        app:layout_constraintTop_toBottomOf="@+id/facility_cell_active_auctions" />
</android.support.constraint.ConstraintLayout>